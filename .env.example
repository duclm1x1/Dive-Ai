# Dive AI V20.2.1 Unified - Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# API KEYS
# =============================================================================

# OpenAI API Key (for ChatGPT, GPT-4, etc.)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# V98API Key (for V98Store models)
V98API_KEY=your_v98api_key_here

# AICoding API Key
AICODING_API_KEY=your_aicoding_api_key_here

# Manus API Key
MANUS_API_KEY=your_manus_api_key_here

# =============================================================================
# MEMORY CONFIGURATION
# =============================================================================

# Memory database path
DIVE_MEMORY_DB_PATH=./data/dive_memory.db

# Maximum links per memory (prevents link explosion)
MAX_LINKS_PER_MEMORY=20

# Embedding cache size (LRU cache for recent embeddings)
EMBEDDING_CACHE_SIZE=1000

# Link batch size (process links in batches)
LINK_BATCH_SIZE=100

# Similarity threshold for linking (0.0-1.0)
SIMILARITY_THRESHOLD=0.75

# =============================================================================
# ORCHESTRATOR CONFIGURATION
# =============================================================================

# Maximum number of agents
MAX_AGENTS=128

# Orchestrator model (for task coordination)
ORCHESTRATOR_MODEL=claude-sonnet-4-5

# Agent model (for task execution)
AGENT_MODEL=claude-opus-4-5

# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=10

# Task timeout (seconds)
TASK_TIMEOUT=300

# =============================================================================
# PROVIDER CONFIGURATION
# =============================================================================

# Enable parallel execution (fastest response wins)
ENABLE_PARALLEL_EXECUTION=true

# Enable automatic failover
ENABLE_AUTO_FAILOVER=true

# Provider timeout (seconds)
PROVIDER_TIMEOUT=30

# Retry attempts
MAX_RETRY_ATTEMPTS=3

# Retry delay (seconds)
RETRY_DELAY=5

# =============================================================================
# MULTI-MODEL REVIEW CONFIGURATION
# =============================================================================

# Complexity thresholds
COMPLEXITY_SIMPLE=3
COMPLEXITY_MODERATE=6
COMPLEXITY_COMPLEX=8
COMPLEXITY_CRITICAL=10

# Enable multi-model review
ENABLE_MULTI_MODEL_REVIEW=true

# Consensus threshold (0.0-1.0)
CONSENSUS_THRESHOLD=0.8

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================

# GitHub repository (format: username/repo)
DIVE_AI_GITHUB_REPO=duclm1x1/Dive-Ai

# GitHub token (for auto-sync)
GITHUB_TOKEN=your_github_token_here

# Enable auto-sync
ENABLE_AUTO_SYNC=true

# Sync interval (seconds)
SYNC_INTERVAL=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/dive_ai.log

# Enable console logging
ENABLE_CONSOLE_LOGGING=true

# Enable file logging
ENABLE_FILE_LOGGING=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Enable caching
ENABLE_CACHING=true

# Cache TTL (seconds)
CACHE_TTL=3600

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable input validation
ENABLE_INPUT_VALIDATION=true

# Enable output sanitization
ENABLE_OUTPUT_SANITIZATION=true

# Maximum input size (bytes)
MAX_INPUT_SIZE=10485760

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode
DEV_MODE=false

# Debug mode
DEBUG=false

# Enable testing
ENABLE_TESTING=false

# Test database path
TEST_DB_PATH=./data/test_dive_memory.db
