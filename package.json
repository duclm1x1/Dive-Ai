{
  "name": "dive-ai-desktop",
  "version": "1.0.0",
  "description": "Dive AI Multi-Agent Coordinator Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"python dashboard_server.py\" \"electron .\"",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2"
  },
  "build": {
    "appId": "com.diveai.desktop",
    "productName": "Dive AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "dashboard/**/*",
      "core/**/*",
      "*.py"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "author": "Dive AI Team",
  "license": "MIT"
}
